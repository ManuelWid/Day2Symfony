<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="assets/pictures/nav-brand.svg">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {# {{ encore_entry_link_tags('app') }} #}
    {% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {% block javascripts %}
    {# {{ encore_entry_script_tags('app') }} #}
    {% endblock %}
    {% block head %}{% endblock %}
    <style>
        body {
            background-image: url("assets/pictures/bg.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
        nav {
            opacity: 0.5;
            transition: 0.5s;
        }
        nav:hover {
            opacity: 1;
        }
        a.active {
            text-decoration: underline;
        }
        .container {
            background-color: rgba(255,255,255,0.5);
        }
    </style>
</head>

<body>
    {% include "components/navbar.html.twig" %}

    <div class="container rounded mt-3">
        {% block body %}{% endblock %}
    </div>

    {# bootstrap #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
    </script>

    {# select active link in navbar #}
    <script>
        let path = window.location.pathname;
        //console.log(path);
        let navlink = document.querySelector('[href="'+path+'"]');
        navlink.classList.add('active');
        navlink.setAttribute("aria-current","true");
        //console.log(document.querySelectorAll(".nav-link"));
    </script>
</body>

</html>